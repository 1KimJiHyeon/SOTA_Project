<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchPost">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/post_back"
            android:layout_width="13dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"></ImageView>

        <LinearLayout
            android:id="@+id/search"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/searchborderline">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/search"></ImageView>

            <EditText
                android:id="@+id/information"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="그룹, 게시물, 사용자 검색"></EditText>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="0.5dp">

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="통합"
                android:textColor="#7E6D6D"
                android:textSize="20dp"></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#7E6D6D" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="0.5dp">

            <TextView
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="그룹"
                android:textColor="#7E6D6D"
                android:textSize="20dp"></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#7E6D6D" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="0.5dp">

            <TextView
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="게시물"
                android:textColor="#4CAF50"
                android:textSize="20dp"></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#4CAF50" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="0.5dp">

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="사용자"
                android:textSize="20dp"></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#7E6D6D" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_margin="10dp"
        android:padding="3dp">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_weight="1"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="25dp"
            android:src="@drawable/home_button" />

        <ImageView
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="25dp"
            android:src="@drawable/chart" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="25dp"
            android:src="@drawable/plus" />

        <ImageView
            android:id="@+id/alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="25dp"
            android:src="@drawable/alert" />

        <ImageView
            android:id="@+id/my_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="25dp"
            android:src="@drawable/mypage_button" />

    </LinearLayout>

</LinearLayout>