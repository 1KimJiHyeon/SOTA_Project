<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:padding="15dp"
            android:src="@drawable/back_button"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:contentDescription="@string/app_name"
            android:padding="15dp"
            android:src="@drawable/main_logo" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:contentDescription="@string/app_name"
            android:padding="15dp"
            android:src="@drawable/setting"
            tools:ignore="ImageContrastCheck" />


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:orientation="horizontal">
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000"
                    android:text="위치"
                    android:gravity="bottom"/>

                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/food" />


            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="367dp"
                    android:layout_weight="1"
                    android:contentDescription="map"
                    android:src="@drawable/testmap"></ImageView>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/close1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/plus_map"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:contentDescription="button"
                    app:srcCompat="@drawable/move_button" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:contentDescription="button"
                    app:srcCompat="@drawable/move_button" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:contentDescription="button"
                    app:srcCompat="@drawable/move_button" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:contentDescription="button"
                    app:srcCompat="@drawable/move_button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/play_background"
                    android:paddingStart="5dp"
                    android:paddingEnd="1dp"
                    android:src="@android:drawable/ic_media_play"
                    app:srcCompat="@android:drawable/ic_media_play" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:gravity="center|start
"
                    android:text="음악 입력하기" />


            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:contentDescription="memo"
                android:gravity="center|start"
                android:text="메모 입력" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="완료"
                android:textColor="#fff"
                android:textSize="17dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_green"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:gravity="top">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:contentDescription="home"
            android:padding="18dp"
            android:src="@drawable/home_button" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:contentDescription="chart"
            android:padding="18dp"
            android:src="@drawable/chart" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:contentDescription="plus"
            android:padding="18dp"
            android:src="@drawable/plus" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:contentDescription="alert"
            android:padding="18dp"
            android:src="@drawable/alert" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:contentDescription="my_page"
            android:padding="18dp"
            android:src="@drawable/mypage_button" />

    </LinearLayout>


</LinearLayout>