            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/change_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="사진 변경하기"
                    android:textColor="#68Cb8F"
                    android:textSize="14sp" />

                // ===================

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="필수 정보"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:text="자기소개"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:layout_marginTop="5dp">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/self_intro"
                        android:layout_width="10dp"
                        android:layout_height="39dp"
                        android:layout_weight="8"
                        android:hint="배고프다"
                        app:met_floatingLabel="normal" />

                    <Button
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:text="변경"
                        android:textSize="13dp"
                        android:textColor="#68CB9F"
                        android:textStyle="bold"
                        app:met_floatingLabel="normal"
                        android:background="@drawable/borderline"
                        android:layout_width="10dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:text="아이디"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/user_id"
                    android:layout_height="55dp"
                    android:text="asdjnjfdk"
                    app:met_floatingLabel="normal"
                    android:layout_width="match_parent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:text="이름"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/name"
                    android:layout_height="55dp"
                    android:text="고승환"
                    app:met_floatingLabel="normal"
                    android:layout_width="match_parent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:text="비밀번호"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:layout_marginTop="5dp">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/pw"
                        android:layout_weight="8"
                        android:layout_height="55dp"
                        android:hint="********"
                        app:met_floatingLabel="normal"
                        android:layout_width="10dp"/>

                    <Button
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:text="변경"
                        android:textSize="13dp"
                        android:textColor="#68CB9F"
                        android:textStyle="bold"
                        app:met_floatingLabel="normal"
                        android:background="@drawable/borderline"
                        android:layout_width="10dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:text="휴대전화"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:layout_marginTop="5dp">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/ph"
                        android:layout_weight="8"
                        android:layout_height="55dp"
                        android:hint="010-****-1234"
                        app:met_floatingLabel="normal"
                        android:layout_width="10dp"/>

                    <Button
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:text="변경"
                        android:textSize="13dp"
                        android:textColor="#68CB9F"
                        android:textStyle="bold"
                        app:met_floatingLabel="normal"
                        android:background="@drawable/borderline"
                        android:layout_width="10dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="부가 정보"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:text="생일"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/birth_year"
                    android:layout_height="55dp"
                    android:hint="2002.**.**"
                    app:met_floatingLabel="normal"
                    android:layout_width="match_parent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:text="성별"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/sex"
                    android:layout_height="55dp"
                    android:text="남"
                    app:met_floatingLabel="normal"
                    android:layout_width="match_parent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:text="거주지역"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:layout_marginTop="5dp">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/residence"
                        android:layout_weight="8"
                        android:layout_height="55dp"
                        android:hint="000"
                        app:met_floatingLabel="normal"
                        android:layout_width="10dp"/>

                    <Button
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:text="변경"
                        android:textSize="13dp"
                        android:textColor="#68CB9F"
                        android:textStyle="bold"
                        app:met_floatingLabel="normal"
                        android:background="@drawable/borderline"
                        android:layout_width="10dp"/>

                </LinearLayout>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_marginTop="5dp"
                    android:layout_height="55dp"
                    android:text="000"
                    app:met_floatingLabel="normal"
                    android:layout_width="match_parent"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:gravity="top"
        >

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:contentDescription="home"
            android:padding="18dp"
            android:src="@drawable/home_button" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:contentDescription="chart"
            android:padding="18dp"
            android:src="@drawable/chart" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:contentDescription="plus"
            android:padding="18dp"
            android:src="@drawable/plus" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:contentDescription="alert"
            android:padding="18dp"
            android:src="@drawable/alert" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:contentDescription="my_page"
            android:padding="18dp"
            android:src="@drawable/mypage_button" />

    </LinearLayout>


</LinearLayout>